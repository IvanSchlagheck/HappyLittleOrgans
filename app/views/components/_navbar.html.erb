      <li class="nav-item active mr-2">
        <%= link_to "Organs", organs_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "https://image.shutterstock.com/image-vector/healthy-biological-organ-smiling-lung-260nw-1239636475.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% unless current_user %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Sign in", new_user_registration_path, class: "dropdown-item" %>
          <% end %>
          <% if current_user %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
