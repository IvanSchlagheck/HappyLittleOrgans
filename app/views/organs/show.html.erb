<div class="d-flex">
  <div class= "mx-5 d-flex align-items-center border shadow rounded card-category-show">
    <% if @organ.photo.attached? %>
      <%= cl_image_tag @organ.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>

  <div class="container">
      <%= link_to 'All Organs', organs_path, class: "topbutton"%>
      <br>
      <br>
    <% if current_user == @organ.user %>
        <%= link_to 'Edit', edit_organ_path(@organ), class: "topbutton"%>
    <% end %>
    <div class= "my-5">
       <h1 class= "h2"><%= @organ.name %> </h1>
      <p><%= @organ.description %>
      <br>
      <%= @organ.price %>â‚¬ </p>
    </div>
    <div class= "d-flex my-5 align-middle">
      <%= link_to 'Book!', new_organ_booking_path(@organ), class: "bookbutton"%>
    </div>
  </div>
</div>

<div class="container-reviews">
  <h2>Reviews</h2>
  <% @bookings.each do |booking| %>
    <% if booking.review %>
      <div class="border rounded p-4 shadow">
        <h3 class="font-weight-bold"><%= booking.review.title %></h3>
        <p><strong>Booking:</strong> <%= booking.starts_on %> - <%= booking.ends_at %></p>
        <p class="font-italic"><%= booking.review.comment %></p>
      </div>

    <% end %>
  <% end %>
</div>
