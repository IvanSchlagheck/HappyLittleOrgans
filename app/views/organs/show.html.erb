<div class="d-flex">
  <div class= "mx-5 d-flex align-items-center border shadow rounded card-category-show">
    <% if @organ.photo.attached? %>
      <%= cl_image_tag @organ.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
  </div>

  <div class="container">
    <div class= "my-5">
       <h1 class= "h2"><%= @organ.name %> </h1>
    </div>
    <div class= "my-5">
      <p class= "h4"><%= @organ.description %> </p>
    </div>
    <div>
    <p class="h4"><%= @organ.price %>â‚¬ </p>
    </div>
    <div class= "d-flex my-5 align-middle">
        <%= link_to 'All Organs', organs_path, class: "redbutton"%>
    <% if current_user == @organ.user %>
        <%= link_to 'Edit', edit_organ_path(@organ), class: "redbutton"%>
    <% end %>
      <%= link_to 'Book!', new_organ_booking_path(@organ), class: "bookbutton"%>
    </div>
  </div>
</div>

<div>
  <% @bookings.each do |booking| %>
    <% if booking.review %>
      <h3><%= booking.review.title %></h3>
      <p>Booking: <%= booking.starts_on %> - <%= booking.ends_at %></p>
      <p><%= booking.review.comment %></p>
    <% end %>
  <% end %>
</div>
