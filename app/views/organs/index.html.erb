<h2>We have <%= @organs.length %> organs available for you.</h2>
<div class="d-flex flex-wrap">
  <% @organs.each do |organ| %>
  <div class="m-3" style="width: 300px">
    <%= link_to organ_path(organ) do %>
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag organ.photo.key, height: 200, width: 285, crop: :fill %> 
        <div class="card-body">
          <%= organ.name %>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
